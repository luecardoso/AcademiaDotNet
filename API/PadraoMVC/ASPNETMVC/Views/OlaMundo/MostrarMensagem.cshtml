@{
    ViewData["title"] = "Mostrar mensagem repetidas vezes";
}
<h2>Estou na pasta OLaMundo no método MostrarMensagem</h2>

<p>@ViewData["nome"]</p>
<p>@ViewData["quantidade"]</p>

<ul>
    
    @for (int i = 0; i < (int)ViewData["Quantidade"]; i++)
{
    <li>@ViewData["nome"]</li>
}
</ul>
